
`timescale 1ns/1ps
module pc(i_clk, i_d, i_arstn, o_q);

parameter WIDTH = 32;

input i_clk; //clock
input [WIDTH-1:0] i_d; 	// input data

input i_arstn; // async reset (active low)

output reg [WIDTH-1:0] o_q; // output data

always @(posedge i_clk or negedge i_arstn) begin
	if (!i_arstn) begin
		o_q <= {WIDTH{1'b0}};
	end else begin
		o_q <= o_q;
	end
end
	
endmodule

